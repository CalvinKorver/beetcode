{
  "manifest_version": 3,
  "name": "BeetCode Problem Tracker",
  "version": "1.0.0",
  "description": "Track completed LeetCode problems automatically",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "*://leetcode.com/*",
        "*://www.leetcode.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "BeetCode Problem Tracker"
  }
}