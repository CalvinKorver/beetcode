{
  "manifest_version": 3,
  "name": "BeetCode - Problem Tracker",
  "version": "1.0.0",
  "description": "The better way to Leetcode. Automatically track coding problems and generate detailed reports.",
  
  "permissions": [
    "storage",
    "activeTab",
    "identity",
    "tabs",
    "notifications"
  ],

  "oauth2": {
    "client_id": "699635422526-ijgogea6agkjj987slnfqpkcjb5f7h3h.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://leetcode.com/*",
        "*://www.leetcode.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "BeetCode Problem Tracker",
    "default_icon": {
      "16": "icons/beetcode-16.png",
      "32": "icons/beetcode-32.png",
      "48": "icons/beetcode-32.png",
      "128": "icons/beetcode-64.png"
    }
  },
  
  "icons": {
    "16": "icons/beetcode-16.png",
    "32": "icons/beetcode-32.png",
    "48": "icons/beetcode-32.png",
    "128": "icons/beetcode-64.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["logout.html", "logout.js"],
      "matches": ["<all_urls>"]
    }
  ]
}